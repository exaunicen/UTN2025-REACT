<div class="container mt-5">
  <div class="row">
    <p class="text-end fs-3 fw-bold ms-1">Bienvenido
      {{email}}
      <a
        href="/admin/login/logout"
        class="boton boton-amarillo text-uppercase fs-5 fw-bold m-4 p-3 shadow"
      >
        Salir
        <i class="bi-box-arrow-right"></i>
      </a>
    </p>
  </div>
  <div class="row">
    <div class="col-7">
      <h3 class="fs-3 text-uppercase fw-bold">Blog Activos</h3>
    </div>
    <div class="col-5 text-end">
      <a
        href="/blog/blogPage/agregarBlog"
        class="btn btn-success fs-5 text-uppercase fw-bold mb-2"
      >
        <i class="bi-plus" aria-hidden="true"></i>
        Nuevo
      </a>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr class="table-dark">
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Subtitulo</th>
            <th scope="col">Imagen</th>
            <th scope="col">Autor</th>
            <th scope="col">Creado</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each blogs}}
            <tr>
              <th scope="row">{{blogId}}</th>
              <td data-titulo="Titulo">{{titulo}}</td>
              <td data-titulo="Subtitulo">{{subtitulo}}</td>
              <td data-titulo="Imagen">{{imagen}}</td>
              <td data-titulo="Autor">{{autor}}</td>
              <td data-titulo="Creado">{{creado}}</td>
              <td class="text-end">
                <a
                  href="/blog/blogPage/modificarBlog/{{blogId}}"
                  class="btn btn-secondary mb-1"
                >
                  <i class="bi-pencil-square"></i>
                </a>
                <a
                  href="/blog/blogPage/eliminarBlog/{{blogId}}"
                  class="btn btn-secondary mb-1"
                >
                  <i class="bi-trash" aria-hidden="true"></i>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>