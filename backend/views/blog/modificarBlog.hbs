<div class="contenedor seccion">
  <h1 class="text-center text-uppercase">Modificaciones del Blog</h1>
  <a href="/blog/blogPage" class="boton boton-verde">Volver</a>
  <form class="formulario" action="/blog/blogPage/modificarBlog" method="post">
    <fieldset>
      <legend>Informacion General</legend>
      <input type="hidden" value="{{blogs.blogId}}" name="id" />

      <label for="titulo">Titulo :</label>
      <input type="text" id="titulo" name="titulo" value="{{blogs.titulo}}" />
      <label for="subtitulo">Subtitulo :</label>
      <input
        type="text"
        id="subtitulo"
        name="subtitulo"
        value="{{blogs.subtitulo}}"
      />
      <label for="imagen">Imagen :</label>
      <input
        type="file"
        id="imagen"
        name="imagen"
        accept="image/jpeg, image/png, image/jpg"
        value="{{blogs.imagen}}"
      />

    </fieldset>
    <fieldset>
      <legend>Detalles de autor</legend>
      <label for="autor">Nombre del autor :</label>
      <input type="text" id="autor" name="autor" value="{{blogs.autor}}" />
    </fieldset>
    <input
      type="submit"
      value="Modoficar Blog"
      class="boton boton-verde w-auto"
    />

  </form>
  {{#if error}}
    <p class="alert alert-danger text-center" role="alert">

      {{message}}
    </p>
  {{/if}}

</div>