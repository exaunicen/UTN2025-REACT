<div class="contenedor mt-5">
  <div class="row">
    <p class="text-end fs-3 fw-bold ms-1">
      Bienvenido
      {{email}}
      <a
        href="/admin/login/logout"
        class="boton boton-amarillo text-uppercase fs-5 fw-bold m-4 p-3 shadow"
      >
        Salir
        <i class="bi-box-arrow-right"></i>
      </a>
    </p>
  </div>
  <div class="row">
    <div class="col-7">
      <h3 class="fs-3 text-uppercase fw-bold">Usuarios Activos</h3>
    </div>
    <div class="col-5 text-end">
      <a
        href="/usuarios/usuariosPage/agregarUsuarios"
        class="btn btn-success fs-5 text-uppercase fw-bold mb-2"
      >
        <i class="bi-plus" aria-hidden="true"></i>
        Nuevo
      </a>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr class="table-dark">
            <th scope="col">#</th>
            <th scope="col">Usuario</th>
            <th scope="col">Contraseña</th>
            <th scope="col">Creado</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each usuarios}}
            <tr>
              <th scope="row">{{userId}}</th>
              <td data-titulo="Usuario">{{usuario}}</td>
              <td data-titulo="Contraseña">{{password}}</td>
              <td data-titulo="Creado">{{creado}}</td>
              <td class="text-end">
                <a
                  href="/usuarios/usuariosPage/modificarUsuarios/{{userId}}"
                  class="btn btn-secondary mb-1"
                >
                  <i class="bi-pencil-square"></i>
                </a>
                <a
                  href="/usuarios/usuariosPage/eliminarUsuarios/{{userId}}"
                  class="btn btn-secondary mb-1"
                >
                  <i class="bi-trash" aria-hidden="true"></i>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>